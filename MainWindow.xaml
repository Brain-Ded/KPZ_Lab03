<Window x:Class="KPZ_Lab03CF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KPZ_Lab03CF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Closed="Window_Closed">
    <Grid>
        <DataGrid AutoGenerateColumns="False" Name="StudentTable">
            <DataGrid.Columns>
                <DataGridTextColumn x:Name="ID" Binding="{Binding ID}" Header="ID"></DataGridTextColumn>
                <DataGridTextColumn x:Name="Name" Binding="{Binding Name}" Header="Name"></DataGridTextColumn>
                <DataGridTextColumn x:Name="Surname" Binding="{Binding Surname}" Header="Surname"></DataGridTextColumn>
                <DataGridTextColumn x:Name="AverageMath" Binding="{Binding AverageMath}" Header="AverageMath"></DataGridTextColumn>
                <DataGridTextColumn x:Name="AverageEnglish" Binding="{Binding AverageEnglish}" Header="AverageEnglish"></DataGridTextColumn>
                <DataGridTextColumn x:Name="AveragePhilosophy" Binding="{Binding AveragePhilosophy}" Header="AveragePhilosophy"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
